{
  "$schema": "https://www.schemastore.org/htmlhint.json",
  "extends": ["development"],
  "hints": {
    // Accessibility preferences
    "axe/text-alternatives": [
      "default",
      {
        "image-alt": "off"
      }
    ],
    "axe/structure": [
      "default",
      {
        "list": "off"
      }
    ],

    // Compatibility preferences
    "compat-api/css": [
      "default",
      {
        "ignore": ["text-wrap", "text-wrap: nowrap"]
      }
    ],

    // Style preferences
    "no-inline-styles": "off"
  }
}
